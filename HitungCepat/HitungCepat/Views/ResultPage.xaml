<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HitungCepat.Views.ResultPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="20">
        <ActivityIndicator x:Name="syncIndicator" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="False" IsEnabled="True" />
            <Label Text="Skor Anda:" FontSize="40" HorizontalOptions="Center" />
            <Label x:Name="labelScore" FontSize="125" HorizontalOptions="Center" Margin="20" />
            <StackLayout HorizontalOptions="FillAndExpand">
                <Button x:Name="btnHome" Text="Beranda" Clicked="GoToHome" />
                <Button x:Name="btnReplay" Text="Main Lagi" Clicked="GoPlayAgain" />
                <Button x:Name="btnSave" Text="Simpan" Clicked="SaveToCloud" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>